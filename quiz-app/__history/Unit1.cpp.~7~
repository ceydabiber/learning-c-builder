#pragma package(smart_init)
#pragma resource "*.fmx"

class Question{
   public:

   char* Text;
   char* Answer1;
   char* Answer2;
   char* Answer3;
   char* Answer4;

   int CorrectAnswer;

   Question(){}
   Question(char* text, char* ans1, char* ans2, char* ans3, char* ans4, int correctAns){
        Text=text;
		Answer1=ans1;
		Answer2=ans2;
		Answer3=ans3;
        Answer4=ans4;
		CorrectAnswer=correctAns;
   }

};
TForm1 *Form1;
